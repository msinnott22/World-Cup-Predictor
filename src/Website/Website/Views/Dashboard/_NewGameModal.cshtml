<div class="modal fade" id="newGameModal" tabindex="-1" role="dialog" aria-labelledby="newGameModalTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="newGameModalTitle">New Game</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="form-newgame">
                    <div class="form-group">
                        <label for="game-name" class="col-form-label">Name</label>
                        <input type="text" class="form-control" id="game-name" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary"  id="createGameBtn">Create</button>
            </div>
        </div>
    </div>
</div>